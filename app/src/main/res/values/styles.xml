<resources>

    <!--============================================== Base Application Theme ===============================================-->
    <!-- Main Application Theme -->
    <style name="SplashTheme" parent="Theme.AppCompat.NoActionBar">
        <item name="android:windowBackground">@drawable/background_splash</item>
    </style>

    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:textColorSecondary">@color/colorSecondary</item>
        <item name="android:windowBackground">@color/colorBackground</item>
        <item name="windowActionModeOverlay">true</item>
    </style>

    <style name="AppTheme.ActionBar" parent="AppTheme">
        <item name="android:textColorPrimary">#fff</item>
        <item name="android:textColorHint">#aaa</item>
        <item name="colorControlNormal">#fff</item>
    </style>

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="NoActionBar" parent="AppTheme">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <!-- Search Theme -->
    <style name="AppTheme.SearchBar" parent="AppTheme">
        <item name="android:textColorPrimary">#222</item>
        <item name="android:textColorHint">#888</item>
        <item name="colorControlNormal">@color/colorPrimaryDark</item>
    </style>

    <style name="AppTheme.SearchBar.SelectionMode" parent="AppTheme">
        <item name="android:textColorPrimary">#000</item>
        <item name="android:textColorHint">#aaa</item>
        <item name="colorControlNormal">#fff</item>
    </style>

    <!-- ImageDisplay Theme -->
    <style name="ImageDisplayTheme" parent="AppTheme">
        <item name="colorPrimaryDark">#000</item>
        <item name="android:windowActionBarOverlay">true</item>
        <item name="android:windowBackground">@null</item>
        <item name="metaButtonBarStyle">?android:attr/buttonBarStyle</item>
        <item name="metaButtonBarButtonStyle">?android:attr/buttonBarButtonStyle</item>
    </style>

    <!--================================================= ((Ripple)) Styles =================================================-->
    <style name="FlatRipple">
        <item name="android:background">@drawable/flat_ripple</item>
    </style>

    <style name="FlatRippleRounded">
        <item name="android:background">@drawable/flat_ripple_rounded</item>
    </style>

    <style name="FlatRippleCircle">
        <item name="android:background">@drawable/flat_ripple_circle</item>
    </style>

    <style name="WhiteRipple">
        <item name="android:background">@drawable/white_ripple</item>
    </style>

    <style name="BrightRippleCircle">
        <item name="android:background">@drawable/bright_ripple_circle</item>
    </style>

    <style name="MaterialDialogButton" parent="FlatRippleRounded">
        <item name="android:textColor">@color/colorPrimary</item>
        <item name="android:layout_margin">2dp</item>
        <item name="android:textSize">15sp</item>
    </style>

    <!--=================================================== General Styles ==================================================-->
    <style name="DividerDark">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">1dp</item>
        <item name="android:background">#282828</item>
    </style>

    <style name="DividerLightVertical">
        <item name="android:layout_width">1dp</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:background">#ccc</item>
    </style>

    <style name="DividerLight">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">1dp</item>
        <item name="android:background">#ccc</item>
    </style>

    <style name="DividerWhite">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">1dp</item>
        <item name="android:background">#fff</item>
    </style>

    <style name="DividerWhiteVertical">
        <item name="android:layout_width">1dp</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:background">#fff</item>
    </style>

    <!--=====================================================================================================================-->

</resources>
